@model bool
@{
    var hostname = $"{Context.Request.Scheme}://{Context.Request.Host}";
}

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Crithink - Confirm Account</title>
    <style type="text/css">
        @@media only screen and (min-device-width: 601px) {
            .content {
                width: 600px !important;
            }
        }

        @@media screen {
            @@font-face {
                font-family: 'Urbanist';
                src: url('https://d3d7rr2pkkio8k.cloudfront.net/Urbanist-Regular.woff') format('woff');
                font-weight: normal;
                font-style: normal;
            }
        }

        body {
            margin: 0;
            padding: 0;
            min-width: 100% !important;
            color: #3d3dca;
        }

        .content {
            width: 100%;
            max-width: 600px;
            font-family: 'Urbanist', sans-serif;
            text-align: center;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
    </style>
</head>

<body>
    <table width="100%" border="0" cellpadding="0" cellspacing="0">
        <tr>
            <td>
                <table class="content" border="0" align="center" cellpadding="10" cellspacing="0"
                    style="border: 10px solid #fa9700; padding: 40px">
                    <tr>
                        <td class="imgHeader">
                            <img src="@hostname/svg/check-circle-solid.svg" width="120">
                        </td>
                    </tr>
                    <tr>
                        <td class="text">
                            <h1>You are ready!</h1>
                            <p>Welcome to Crithink, now you you are part of the community to battle against the fake
                                news</p>
                            <p><a href="@hostname/"
                                    style="background-color: #fa9700; color:white; border: none; border-radius:10px; padding:10px 20px; cursor: pointer; font-size: 14pt; text-decoration: none;">Go
                                    to control panel</a></p>
                        </td>
                    </tr>
                    <tr>
                        <td class="imgFooter">
                            <br />
                            <img src="https://d3d7rr2pkkio8k.cloudfront.net/crithink.png" width="80">
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>