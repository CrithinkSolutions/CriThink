@{
	Layout = "_LayoutApi";
    ViewData["Title"] = "Debunking News";
}
<div class="bg-white p-4 shadow text-center">
	<!-- START INPUT SECTION -->
	<div id="toolbox" class="border p-2 mb-2">
		<button type="button" class="btn btn-success" data-toggle="modal" data-target="#addnewsmodal"><i class="fas fa-plus"></i></button>
	</div>
	<table id="table">
		<thead>
		    <tr>
		      <th data-field="uri">Uri</th>
		      <th data-field="classification">Classification</th>
		    </tr>
  		</thead>
	</table>
	<!-- END INPUT SECTION -->
	<!-- START MODAL -->
	<div class="modal fade" id="addnewsmodal" tabindex="-1" role="dialog" aria-labelledby="addnewsmodal" aria-hidden="true">
	  <div class="modal-dialog modal-dialog-centered" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <h5 class="modal-title">Add news</h5>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body">
		      	<label for="input-url">Uri</label>
		        <input type="text" class="form-control mb-3" id="uri-input" aria-describedby="basic-addon3">
		        <label for="input-classification">Classification</label>
		        <select class="custom-select" id="class-input">
				    <option selected>Reliable</option>
				    <option>Satirical</option>
				    <option>Conspiracist</option>
				    <option>FakeNews</option>
			  	</select>
	  	  </div>
	      <div class="modal-footer">
	        <button type="button" id="btn-addnews" class="btn btn-success">Add</button>
	      </div>
	    </div>
	  </div>
	</div>
	<!-- END MODAL -->
	<div class="mt-3">
		<a href="/control-panel">Return at Control Panel</a>
	</div>
</div>