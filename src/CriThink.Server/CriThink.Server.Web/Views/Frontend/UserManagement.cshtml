@{
	Layout = "_LayoutApi";
    ViewData["Title"] = "User Management";
}
<div class="bg-white p-4 shadow text-center m-4">
	<!-- (START) INPUT SECTION -->
	<div id="toolbox" class="border p-2 mb-2">
		<button type="button" class="btn btn-success" data-toggle="modal" data-target="#addusermodal"><i class="fas fa-plus"></i></button>
		<button id="deleteusertoolbar" type="button" class="btn btn-danger" data-toggle="modal" data-target="#removenewsmodal"><i class="fas fa-trash-alt"></i></button>
	</div>
	<table id="tableUser" data-click-to-select="true">
		<thead>
		    <tr>
		      <th class="d-none" data-field="state" data-radio="true"></th>
		      <th data-field="username">Username</th>
		      <th data-field="role">Role</th>
		    </tr>
  		</thead>
	</table>
	<!-- (END) INPUT SECTION -->
	<!-- (START) ADD NEWS MODAL -->
	<div class="modal fade" id="addusermodal" tabindex="-1" role="dialog" aria-labelledby="addusermodal" aria-hidden="true">
	  <div class="modal-dialog modal-dialog-centered" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <h5 class="modal-title">Add user</h5>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body">
		      	<label for="input-url">Username</label>
		        <input type="text" class="form-control" id="username-input" aria-describedby="basic-addon3">
		        <label for="input-url">Email</label>
		        <input type="text" class="form-control" id="email-input" aria-describedby="basic-addon3">
		        <label for="input-url">Password</label>
		        <input type="password" class="form-control" id="password-input" aria-describedby="basic-addon3">
		        <label for="input-classification">Role</label> 
		        <!-- For now hardcoded -->
		        <select class="custom-select" id="role-input">
				    <option selected>No role</option>
				    <option>Admin</option>
			  	</select>
	  	  </div>
	      <div class="modal-footer">
	        <button type="button" id="btn-adduser" class="btn btn-success">Add</button>
	      </div>
	    </div>
	  </div>
	</div>
	<!-- (END) ADD NEWS MODAL -->
	<!-- (START) REMOVE NEWS MODAL -->
	<div class="modal fade" id="removenewsmodal" tabindex="-1" role="dialog" aria-labelledby="removenewsmodal" aria-hidden="true">
	  <div class="modal-dialog modal-dialog-centered" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <h5 class="modal-title">Are you sure to delete this news source?</h5>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body">
	      	You are selected <b id="uriselected"></b> with classification <b id="classificationselected"></b>
	      </div>
	      <div class="modal-footer">
	      	<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
	        <button type="button" id="btn-removenews" class="btn btn-danger">Delete</button>
	      </div>
	    </div>
	  </div>
	</div>
	<!-- (END) REMOVE NEWS MODAL -->
	<div class="mt-3">
		<a href="/control-panel">Return at Control Panel</a>
	</div>
</div>