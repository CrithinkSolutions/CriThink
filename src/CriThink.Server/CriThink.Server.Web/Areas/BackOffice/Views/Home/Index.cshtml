@model string
@{
    Layout = "_LayoutApi";
    ViewData["Title"] = "Control Panel";
}
<div class="bg-white p-4 shadow text-center">
    <!-- (START) INPUT SECTION -->
    <i class="fas fa-user-circle fa-7x m-2"></i>
    <h3 id="welcome">Welcome @Model</h3>
    <form asp-area="BackOffice" asp-controller="Account" asp-action="Logout" method="post">
        <button type="submit" class="btn btn-danger">Logout</button>
    </form>
    <div class="p-3 card">
        <div class="mb-2">
            <i class="fas fa-users"></i>
            <a asp-controller="UserManagement" asp-action="Index">User Management</a>
        </div>
        <div>
            <i class="fas fa-newspaper"></i>
            <a asp-controller="DebunkingNews" asp-action="Index">Debunking News</a>
        </div>
    </div>
    <!-- (END) INPUT SECTION -->
</div>