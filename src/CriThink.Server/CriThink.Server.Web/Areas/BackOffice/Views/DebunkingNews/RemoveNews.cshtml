@using CriThink.Common.Endpoints.DTOs.Admin;
@model IList<DebunkingNewsGetAllResponse>;
@{
    Layout = "_LayoutApi";
    ViewData["Title"] = "Remove News";
}

<div class="bg-white p-4 shadow text-center m-4 mw-100">
    <h3 class="mb-3">Remove News</h3>
    <div class="p-1 m-1">
        
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Select</th>
                    <th scope="col">Title</th>
                    <th scope="col">Publisher</th>
                </tr>
            </thead>
            @foreach(var c in Model)
            {
                <tr>
                    <td><input type="radio" name="allnews" value="@c.Id"></td>
                    <td>@c.Title</td>
                    <td>@c.Publisher</td>
                </tr>
            }
        </table>

    @if(TempData["success"] != null)
    {
        <div class="alert alert-success">@Html.Encode(TempData["success"])</div>
    }

    <button id="accessDelete" class="btn btn-danger btn-block" data-toggle="modal" data-target="#modalDelete"><i class="fas fa-trash-alt"></i></button>
    <div class="mt-3 border-top pt-3">
        <a asp-controller="DebunkingNews" asp-action="Index">Return to DebunkingNews</a>
    </div>
</div>

<!-- Modal -->
<div id="modalDelete" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Remove this news</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure to delete <b id="nameNews"></b>?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="sureDelete" type="button" class="btn btn-danger">Delete</button>
      </div>
    </div>
  </div>
</div>
<!-- End Modal -->

@section Scripts
{
    <script type="text/javascript">
        $(function() {
            $('#accessDelete').click(function(){
                if(!$('input[name="allnews"]:checked').val()){alert("Please select news first")}
                $('#nameNews').html($('input[name="allnews"]:checked').parents().next('td').html());
            });
            $('#sureDelete').click(function(){
                let news = {}
                news.Id = $('input[name="allnews"]:checked').val();
                $.post('@Url.Action("RemoveNews")', { removenewsModel: news }, function(data){
                    $('body').html(data);
                })
                .fail(function(){
                    alert("Error")
                });
            });
        });
    </script>
}