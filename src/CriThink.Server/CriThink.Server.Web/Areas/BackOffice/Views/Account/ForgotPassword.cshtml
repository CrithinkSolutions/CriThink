@model CriThink.Server.Web.Areas.BackOffice.ViewModels.Account.ForgotPasswordViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Forgot Password";
}

<div class="container-fluid h-100">
    <div class="row align-items-center h-100">
        <div class="col-12 text-center">
            <div id="loginInputs" class="card p-3 mx-auto text-center rounded shadow">
                <div class="card-body">
                    <div class="card-title">
                        <img src="/images/logo_use_the_head.svg" class="mt-3 mb-3" style="max-width: 10rem">
                        <h2>Forgot Password</h2>
                        <p>Please enter your email or username to reset your password</p>
                    </div>

                    <form method="post" asp-area="BackOffice" asp-controller="Account" asp-action="ForgotPassword">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input asp-for="EmailOrUsername" class="form-control" aria-describedby="emailHelp" required>
                        </div>

                        <div class="mb-3 mt-3">
                            <span asp-validation-for="EmailOrUsername" class="text-danger"></span>
                            <br />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <br />
                        </div>

                        @if (!string.IsNullOrWhiteSpace(Model?.Message))
                        {
                            <div class="alert alert-success">@Model.Message</div>
                        }

                        <div>
                            <input class="btn btn-purple btn-block" type="submit" value="Reset Password" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>