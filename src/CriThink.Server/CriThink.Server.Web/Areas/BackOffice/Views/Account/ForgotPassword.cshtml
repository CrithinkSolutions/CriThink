@model CriThink.Server.Web.Areas.BackOffice.ViewModels.Account.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="p-4 text-center">
    <img src="/logo.svg" width="250" alt="Crithink Logo">
    <div class="mt-3">
        <h2>Forgot Password</h2>
        <p>Please enter your email or username to reset your password</p>
    </div>
    <div class="text-danger" asp-validation-summary="All"></div>
    <form class="p-3" method="post" asp-area="BackOffice" asp-controller="Account" asp-action="ForgotPassword">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
            <input asp-for="EmailOrUsername" class="form-control" aria-describedby="emailHelp"
                placeholder="Username or Email">
            @*<span asp-validation-for="EmailOrUsername"></span>*@
        </div>
        <input class="btn btn-purple" type="submit" value="Reset" />
    </form>

    @if (Model?.Message != null)
    {
        <div class="alert alert-success">@Model.Message</div>
    }

    <div id="errordiv" class="alert alert-danger mt-3 d-none">
        <span><i class="fas fa-exclamation-circle"></i>Input not valid</span>
    </div>
</div>