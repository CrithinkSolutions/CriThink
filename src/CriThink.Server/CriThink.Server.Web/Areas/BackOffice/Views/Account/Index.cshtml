@model CriThink.Server.Web.Areas.BackOffice.ViewModels.Account.LoginViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}
<div class="container-fluid h-100">
    <div class="row align-items-center h-100">
        <div class="col-md d-none d-md-block text-center">
            <img id="loginLogo" src="@Model.ImagePath" alt="Crithink Img">
        </div>
        <div class="col-md text-center">
            <div id="loginInputs" class="card p-3 text-center rounded shadow">
                <div class="card-body">
                    <div class="card-title">
                        <img src="/images/logo_use_the_head.svg" class="mt-3 mb-3" style="max-width: 10rem">
                    </div>

                    <form method="post" asp-area="BackOffice" asp-controller="Account" asp-action="Login">

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input asp-for="EmailOrUsername" class="form-control" aria-describedby="emailHelp" required>
                        </div>

                        <div class="input-group mt-3 mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input asp-for="Password" type="password" class="form-control" aria-describedby="emailHelp" required>
                        </div>

                        <div class="form-check form-check-inline mt-3">
                            <input asp-for="RememberMe" type="checkbox" class="form-check-input " />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>

                        <div class="mb-3 mt-3">
                            <span asp-validation-for="EmailOrUsername" class="text-danger"></span>
                            <br />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <br />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <br />
                        </div>

                        <div>
                            <input class="btn btn-purple btn-block" type="submit" value="Login" />
                        </div>

                    </form>

                </div>

                <p><a asp-area="BackOffice" asp-controller="Account" asp-action="ForgotPassword">Forgot password?</a></p>
            </div>
        </div>
    </div>
</div>