@using CriThink.Server.Web.Areas.BackOffice.ViewModels.NewsSource;
@model UnknownNewsSourceViewModel;
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit News Source";
}
<div class="p-4 text-center m-4 mw-100">
    <h3 class="mb-3">Edit Unknown Source</h3>
    @using (Html.BeginForm(FormMethod.Post))
    {
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Id</span>
            </div>
            <input asp-for="Id" class="form-control">
        </div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Uri</span>
            </div>
            <input asp-for="Uri" class="form-control">
        </div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Type</span>
            </div>
            <select asp-for="Classification" asp-items="Html.GetEnumSelectList<Classification>()
            .Where(i => i.Value != Classification.Unknown.ToString())"></select>
        </div>

        @if(!Html.ViewData.ModelState.IsValid) 
        {
            @Html.ValidationSummary(null, new { @class = "alert alert-danger" })
        }

        <button class="btn btn-success btn-block" type="submit"><i class="fas fa-save"></i></button>
    }
</div>