{
  "Logging": {
    "Region": "eu-central-1",
    "LogGroup": "CriThink.Production",
    "IncludeLogLevel": true,
    "IncludeCategory": true,
    "IncludeNewline": true,
    "IncludeException": true,
    "IncludeEventId": false,
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AWSSESSettings": {
    "FromAddress": "crithinksolutions@gmail.com",
    "FromName": "CriThink",
    "ConfirmationEmailSubject": "Please, verify your account",
    "ForgotPasswordSubject": "CriThink password reset request",
    "ConfirmationEmailLink": "{0}/api/identity/confirm-email?userId={1}&code={2}",
    "ForgotPasswordLink": "{0}/reset-password?userId={1}&code={2}"
  },
  "DebunkedNewsSources": {
    "OpenOnline": {
      "Uri": "https://www.open.online/feed/",
      "Categories": [
        "FACT-CHECKING",
        "FAKE-NEWS",
        "BUFALA"
      ]
    }
  },
  "AllowCorsOrigin": [ "https://crithinkapp.com" ],
  "AllowedHosts": "*",
  "FacebookApiUrl": "https://graph.facebook.com/",
  "GoogleApiUrl": "https://www.googleapis.com/oauth2/v3/",
  "AppleApiUrl": "https://apple.com/"
}
