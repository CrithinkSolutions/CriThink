<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>        
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
      <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
      <item name="android:background">@drawable/bottomsheet_rounded</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="HeaderWhiteText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSize_header</item>
    </style>

    <style name="SubheaderWhiteText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textSize_subheader</item>
    </style>
    <style name="ContentTitleText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/textSize_contentTitle</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ContentSubtitleText">
        <item name="android:textColor">@android:color/black</item>
        
        <item name="android:textSize">@dimen/textSize_contentSubtitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FlatWhiteRoundCornerButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_button_radius</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorControlHighlight">?android:attr/colorAccent</item>
        <item name="android:textSize">@dimen/textSize_button</item>
    </style>
     <style name="OutlinedRoundedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">    
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="boxStrokeColor">@drawable/text_input_box_stroke_color</item>
        <item name="android:textColor">@color/editText_textColor</item>
        <item name="shapeAppearanceOverlay">
          @style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded
        </item>
  </style>

  <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">32dp</item>
  </style>

  <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
    <item name="colorControlNormal">@android:color/white</item>
  </style>

   <style name="MyThemeOverlay.MaterialComponents.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
    <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Dialog.Rounded</item>
  </style>
   <style name="ShapeAppearanceOverlay.MyApp.Dialog.Rounded" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">25dp</item>
  </style>
</resources>
