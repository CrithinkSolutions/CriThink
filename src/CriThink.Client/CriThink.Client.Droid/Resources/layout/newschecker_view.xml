<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="true"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:fillViewport="true"
        android:overScrollMode="always"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:id="@+id/root">
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/containerMain"
                android:paddingStart="@dimen/padding_page"
                android:paddingEnd="@dimen/padding_page">
                
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtWelcome"
                    android:textSize="@dimen/textSize_caption"
                    android:fontFamily="@font/urbanist_light"
                    android:layout_marginTop="@dimen/margin_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtName"
                    app:textAllCaps="true"
                    android:gravity="start"
                    android:textSize="@dimen/textSize_title"
                    app:layout_constraintStart_toStartOf="@id/txtWelcome"
                    app:layout_constraintEnd_toStartOf="@id/imgLogo"
                    app:layout_constraintTop_toBottomOf="@id/txtWelcome"/>

                <ffimageloading.cross.MvxSvgCachedImageView
                    android:layout_width="@dimen/imgSize_medium"
                    android:layout_height="@dimen/imgSize_medium"
                    android:id="@+id/imgLogo"
                    app:layout_constraintTop_toTopOf="@id/txtWelcome"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtMotto"
                    android:textColor="@color/welcomeBackground"
                    app:layout_constraintStart_toStartOf="@id/txtWelcome"
                    app:layout_constraintTop_toBottomOf="@id/txtName"
                    app:textAllCaps="true"
                    android:textSize="@dimen/textSize_small"
                    android:layout_marginTop="@dimen/margin_big"
                    android:fontFamily="@font/urbanist_light"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtDate"
                    app:layout_constraintStart_toEndOf="@id/txtMotto"
                    app:layout_constraintBottom_toBottomOf="@id/txtMotto"
                    app:textAllCaps="true"
                    android:textSize="@dimen/textSize_small"
                    android:layout_marginStart="@dimen/margin_medium"/>
                
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnNews"
                    android:textAllCaps="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtDate"
                    android:layout_marginTop="@dimen/margin_veryBig"
                    android:padding="@dimen/edittext_padding"
                    android:background="@drawable/edittext_rounded"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSectionTitle"
                    android:textSize="@dimen/textSize_subheader"
                    app:layout_constraintTop_toBottomOf="@id/btnNews"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/margin_veryBig"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSeeAll"
                    android:textColor="@color/welcomeBackground"
                    android:fontFamily="@font/urbanist_extrabold"
                    app:layout_constraintBottom_toBottomOf="@id/txtSectionTitle"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <mvvmcross.droidx.recyclerview.MvxRecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="@dimen/margin_medium"
                app:layout_constraintTop_toBottomOf="@id/containerMain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/list_debunkingNews" />
            <ScrollView
                android:id="@+id/scrollview_shimmer"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/containerMain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content">
                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    layout="@layout/newschecker_shimmer_view"/>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.core.widget.NestedScrollView>
  
</androidx.constraintlayout.widget.ConstraintLayout>