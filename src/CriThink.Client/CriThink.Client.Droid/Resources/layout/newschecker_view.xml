<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="true"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:id="@+id/root">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guideline"
            android:focusableInTouchMode="true"
            android:paddingTop="@dimen/margin_big"
            android:paddingBottom="@dimen/margin_medium"
            android:id="@+id/contentHeader">
            <LinearLayout
                android:id="@+id/linearHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_medium">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtName"
                    android:gravity="start"
                    tools:text="Hello Krusty"
                    style="@style/HeaderWhiteText"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtWelcome"
                    tools:text="Good Morning"
                    style="@style/SubheaderWhiteText"/>
            </LinearLayout>
            <ffimageloading.cross.MvxSvgCachedImageView
                android:layout_width="@dimen/imgSize_medium"
                android:layout_height="@dimen/imgSize_medium"
                android:id="@+id/imgLogo"
                tools:src="@tools:sample/avatars"
                android:layout_marginEnd="@dimen/margin_medium"
                app:layout_constraintTop_toTopOf="@id/linearHeader"
                app:layout_constraintBottom_toBottomOf="@id/linearHeader"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2"/>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll"
            android:background="@drawable/round_background"
            android:fillViewport="true"
            android:overScrollMode="always"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/contentHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingTop="@dimen/margin_micro">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guideline">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/containerMain"
                    android:paddingTop="@dimen/margin_medium"
                    android:paddingStart="@dimen/padding_page"
                    android:paddingEnd="@dimen/padding_page">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtMotto"
                        tools:text="Use the head today"
                        style="@style/ContentSubtitleText"
                        app:layout_constraintStart_toStartOf="@id/txtWelcome"
                        app:layout_constraintTop_toBottomOf="@id/txtName"
                        android:layout_marginTop="@dimen/margin_big"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtDate"
                        tools:text="Aug 13, 2021"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/txtMotto"
                        android:textSize="@dimen/textSize_contentTitle"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_big"/>

                    <androidx.appcompat.widget.AppCompatButton
                        tools:text="Which news do you want to check?"
                        android:textAlignment="textStart"
                        android:textColor="@color/secondaryTextColor"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnNews"
                        android:textAllCaps="false"
                        android:textStyle="normal"
                        android:drawableEnd="@drawable/ic_button_search"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtDate"
                        android:layout_marginTop="@dimen/margin_veryBig"
                        android:padding="@dimen/edittext_padding"
                        android:background="@drawable/edittext_rounded"/>

                    <com.google.android.gms.ads.AdView
                        android:id="@+id/adView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/btnNews"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:adSize="@string/banner_size"
                        app:adUnitId="@string/banner_id"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtSectionTitle"
                        tools:text="Latest Debunking News"
                        style="@style/ContentSubtitleText"
                        app:layout_constraintTop_toBottomOf="@id/adView1"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/margin_veryBig"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtSeeAll"
                        android:textColor="@color/welcomeBackground"
                        android:fontFamily="@font/urbanist_extrabold"
                        app:layout_constraintBottom_toBottomOf="@id/txtSectionTitle"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <mvvmcross.droidx.recyclerview.MvxRecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="@dimen/margin_medium"
                    app:layout_constraintTop_toBottomOf="@id/containerMain"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/list_debunkingNews" />
                <ScrollView
                    android:id="@+id/scrollview_shimmer"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/containerMain"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_height="wrap_content">
                    <include
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        layout="@layout/newschecker_shimmer_view"/>
                </ScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>