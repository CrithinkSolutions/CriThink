<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/padding_page"
    android:paddingEnd="@dimen/padding_page">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgMenu"
        android:layout_margin="@dimen/margin_mini"
        tools:src="@drawable/ic_notification_settings"
        android:background="@drawable/circle_background"
        android:layout_width="@dimen/imgSize_medium"
        android:scaleType="fitCenter"
        android:padding="@dimen/margin_medium"
        android:layout_height="@dimen/imgSize_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtMenu"
        tools:text="Test"
        app:MvxBind="Text Text"
        android:textSize="@dimen/textSize_contentSubtitle"
        android:textColor="@color/accent"
        android:layout_marginStart="@dimen/margin_small"
        app:layout_constraintStart_toEndOf="@id/imgMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>