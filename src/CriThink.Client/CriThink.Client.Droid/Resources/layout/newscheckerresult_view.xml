<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/welcomeBackground"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:focusableInTouchMode="true"
        android:id="@+id/root">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/layoutHeader">
                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    
                    android:id="@+id/appBarLayout"
                    layout="@layout/toolbar"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTitle"
                    android:textColor="@android:color/white"
                    app:layout_goneMarginTop="@dimen/margin_medium"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textStyle="bold"
                    tools:text="Title"
                    android:textSize="@dimen/textSize_title"
                    android:gravity="center" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/scrollViewer"
            android:background="@drawable/round_background"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/layoutHeader"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:overScrollMode="always">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_height="0dp">
                    <ffimageloading.cross.MvxSvgCachedImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="H,1:.6"
                        android:cropToPadding="true"
                        android:id="@+id/imgHeader"
                        android:scaleType="fitCenter"
                        tools:src="@drawable/result_conspiracy"
                        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/content_body"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:paddingStart="@dimen/padding_page"
                        android:paddingEnd="@dimen/padding_page"
                        android:paddingBottom="@dimen/padding_page"
                        android:layout_marginTop="@dimen/margin_big"
                        app:layout_constraintTop_toBottomOf="@id/imgHeader">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvResponseTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="We Think This Website Is"
                            android:textAlignment="center"
                            android:textSize="@dimen/textSize_caption"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textStyle="bold"
                            android:textColor="@color/darkTextColor"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvResponse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvResponseTitle"
                            android:textAlignment="center"
                            android:textSize="@dimen/textSize_caption"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            tools:text="Reliable" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:gravity="center_horizontal"
                            app:layout_constraintTop_toBottomOf="@id/tvResponse"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam"
                            android:id="@+id/tvDescription"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/box_user_vote"
                            android:layout_marginTop="@dimen/margin_littleBig"
                            app:layout_constraintTop_toBottomOf="@id/tvDescription"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_page"
                            android:background="@drawable/vote_rounded_background">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvUserVote"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="User Vote"
                                android:textSize="@dimen/textSize_contentTitle"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:textStyle="bold"
                                android:textColor="@color/darkTextColor"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvUvRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="4/5"
                                android:textSize="@dimen/textSize_contentTitle"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textColor="@color/darkTextColor"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/margin_medium"
                                android:layout_marginBottom="@dimen/margin_medium"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tvUserVote">
                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/img_uv_vote_1"
                                        android:layout_width="@dimen/imgSize_vote"
                                        android:padding="@dimen/padding_vote"
                                        android:layout_height="@dimen/imgSize_vote"
                                        android:background="@drawable/background_vote_off"
                                        android:src="@drawable/ic_vote_off"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/img_uv_vote_2"
                                        android:layout_width="@dimen/imgSize_vote"
                                        android:padding="@dimen/padding_vote"
                                        android:layout_height="@dimen/imgSize_vote"
                                        android:background="@drawable/background_vote_off"
                                        android:src="@drawable/ic_vote_off"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/img_uv_vote_3"
                                        android:layout_width="@dimen/imgSize_vote"
                                        android:padding="@dimen/padding_vote"
                                        android:layout_height="@dimen/imgSize_vote"
                                        android:background="@drawable/background_vote_off"
                                        android:src="@drawable/ic_vote_off"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/img_uv_vote_4"
                                        android:layout_width="@dimen/imgSize_vote"
                                        android:padding="@dimen/padding_vote"
                                        android:layout_height="@dimen/imgSize_vote"
                                        android:background="@drawable/background_vote_off"
                                        android:src="@drawable/ic_vote_off"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/img_uv_vote_5"
                                        android:layout_width="@dimen/imgSize_vote"
                                        android:padding="@dimen/padding_vote"
                                        android:layout_height="@dimen/imgSize_vote"
                                        android:background="@drawable/background_vote_off"
                                        android:src="@drawable/ic_vote_off"/>
                                </FrameLayout>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/box_community_vote"
                            android:layout_marginTop="@dimen/margin_littleBig"
                            app:layout_constraintTop_toBottomOf="@id/box_user_vote"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_page"
                            android:background="@drawable/vote_rounded_background">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvCommunityVote"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Community Vote"
                                android:textSize="@dimen/textSize_contentTitle"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:textStyle="bold"
                                android:textColor="@color/darkTextColor"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvCvRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="4/5"
                                android:textSize="@dimen/textSize_contentTitle"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textColor="@color/darkTextColor"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/margin_medium"
                                android:layout_marginBottom="@dimen/margin_medium"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tvCommunityVote">
                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/img_cv_vote_1"
                                        android:layout_width="@dimen/imgSize_vote"
                                        android:padding="@dimen/padding_vote"
                                        android:layout_height="@dimen/imgSize_vote"
                                        android:background="@drawable/background_vote_off"
                                        android:src="@drawable/ic_vote_off"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/img_cv_vote_2"
                                        android:layout_width="@dimen/imgSize_vote"
                                        android:padding="@dimen/padding_vote"
                                        android:layout_height="@dimen/imgSize_vote"
                                        android:background="@drawable/background_vote_off"
                                        android:src="@drawable/ic_vote_off"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/img_cv_vote_3"
                                        android:layout_width="@dimen/imgSize_vote"
                                        android:padding="@dimen/padding_vote"
                                        android:layout_height="@dimen/imgSize_vote"
                                        android:background="@drawable/background_vote_off"
                                        android:src="@drawable/ic_vote_off"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/img_cv_vote_4"
                                        android:layout_width="@dimen/imgSize_vote"
                                        android:padding="@dimen/padding_vote"
                                        android:layout_height="@dimen/imgSize_vote"
                                        android:background="@drawable/background_vote_off"
                                        android:src="@drawable/ic_vote_off"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/img_cv_vote_5"
                                        android:layout_width="@dimen/imgSize_vote"
                                        android:padding="@dimen/padding_vote"
                                        android:layout_height="@dimen/imgSize_vote"
                                        android:background="@drawable/background_vote_off"
                                        android:src="@drawable/ic_vote_off"/>
                                </FrameLayout>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtRelatedDNews"
                            tools:text="Related News"
                            android:textSize="@dimen/textSize_littleBig"
                            android:layout_marginTop="@dimen/margin_veryBig"
                            android:layout_marginStart="@dimen/margin_medium"
                            app:layout_constraintTop_toBottomOf="@id/box_community_vote"/>

                        <mvvmcross.droidx.recyclerview.MvxRecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/recyclerRelatedDNews"
                            android:nestedScrollingEnabled="true"
                            android:layout_marginTop="@dimen/margin_mini"
                            app:layout_constraintTop_toBottomOf="@id/txtRelatedDNews"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                        <View
                            app:layout_constraintTop_toBottomOf="@id/recyclerRelatedDNews"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/margin_mini"
                            android:layout_height="@dimen/footer"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:padding="@dimen/padding_page"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toBottomOf="@id/content_body"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:thumb="@drawable/thumb_selector"
                            app:track="@drawable/track_selector"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvNotification"
                            android:layout_width="wrap_content"
                            tools:text="Get notified when we classify this website"
                            app:layout_constraintEnd_toStartOf="@id/switchNotification"
                            android:singleLine="false"
                            android:textColor="@color/darkTextColor"
                            android:textSize="@dimen/textSize_subheader"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_height="wrap_content"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
        
        </androidx.core.widget.NestedScrollView>
     </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
