<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:background="@drawable/round_corner_background"
  android:layout_width="match_parent"
  android:padding="@dimen/padding_mini"
  android:layout_marginTop="@dimen/margin_medium"
  android:layout_marginBottom="@dimen/margin_medium"
  android:layout_height="wrap_content">

  <FFImageLoading.Cross.MvxCachedImageView
    android:layout_marginStart="@dimen/margin_mini"
    android:layout_width="@dimen/imgSize_extraSmall"
    android:layout_height="@dimen/imgSize_extraSmall"
    android:src="@drawable/ic_blog_logo"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:id="@+id/imgWebsite" />

  <com.google.android.material.textview.MaterialTextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/txtLink"
    tools:text="https://google.it"
    android:textColor="@color/textColor"
    android:textSize="@dimen/textSize_contentSubtitle"
    app:layout_constraintStart_toEndOf="@id/imgWebsite"
    app:layout_constraintEnd_toStartOf="@id/btnHistoryDelete"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginLeft="@dimen/margin_medium"/>

  <androidx.appcompat.widget.AppCompatImageButton
      android:id="@+id/btnHistoryDelete"
      android:layout_marginEnd="@dimen/margin_mini"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:padding="@dimen/padding_mini"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      android:background="@android:color/transparent"
      android:src="@drawable/ic_button_history_delete"/>
</androidx.constraintlayout.widget.ConstraintLayout>
