<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:fillViewport="true"
        android:overScrollMode="always"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:paddingStart="@dimen/padding_page"
            android:paddingEnd="@dimen/padding_page"
            android:id="@+id/root">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtMottoOne"
                android:textSize="@dimen/textSize_caption"
                android:text="Use the"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/txtMottoTwo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"/>
            
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtMottoTwo"
                android:textSize="@dimen/textSize_caption"
                android:textColor="@color/welcomeBackground"
                android:textStyle="italic"
                android:text="HEAD "
                android:layout_marginStart="@dimen/margin_mini"
                android:paddingEnd="@dimen/margin_mini"
                android:layout_marginEnd="@dimen/margin_mini"
                app:layout_constraintStart_toEndOf="@id/txtMottoOne"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/viewTopDivider"
                style="@style/Divider"
                android:layout_marginTop="@dimen/margin_littleBig"
                app:layout_constraintTop_toBottomOf="@id/txtMottoOne"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewTopDivider"
                android:layout_marginTop="@dimen/margin_littleBig"
                android:id="@+id/viewError">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animError"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    app:lottie_fileName="36572-under-maintenance.json"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:lottie_cacheComposition="true" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtError"
                    android:textSize="@dimen/textSize_subheader"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="Oops! We're trying to fix the issue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/animError"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewTopDivider"
                android:layout_marginTop="@dimen/margin_littleBig"
                android:id="@+id/viewContent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtActiveUsersHeader"
                    android:textSize="@dimen/textSize_littleBig"
                    app:textAllCaps="true"
                    android:text="Active CriThinker"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewTopDivider"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtActiveUsers"
                    android:textSize="@dimen/textSize_huge"
                    android:text="000150"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_littleBig"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtActiveUsersHeader"/>

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animUsers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:lottie_fileName="53513-confetti.json"
                    app:lottie_speed="0.6"
                    app:lottie_loop="false"
                    app:lottie_autoPlay="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/viewUsersDivider"
                    app:lottie_cacheComposition="true" />

                <View
                    android:id="@+id/viewUsersDivider"
                    style="@style/Divider"
                    android:layout_marginTop="@dimen/margin_littleBig"
                    app:layout_constraintTop_toBottomOf="@id/txtActiveUsers"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTotalSearchesHeader"
                    android:textSize="@dimen/textSize_littleBig"
                    app:textAllCaps="true"
                    android:text="Total Searches"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_littleBig"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewUsersDivider"/>

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animTotalSearches"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    app:lottie_fileName="65096-chill.json"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"
                    android:layout_marginTop="@dimen/margin_littleBig"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtTotalSearchesHeader"
                    app:lottie_cacheComposition="true" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTotalSearches"
                    android:textSize="@dimen/textSize_title"
                    android:text="000150"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_littleBig"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/animTotalSearches"/>

                <View
                    android:id="@+id/viewTotalSearchesDivider"
                    style="@style/Divider"
                    android:layout_marginTop="@dimen/margin_littleBig"
                    app:layout_constraintTop_toBottomOf="@id/txtTotalSearches"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtUserSearchesHeader"
                    android:textSize="@dimen/textSize_littleBig"
                    app:textAllCaps="true"
                    android:text="User Searches"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_littleBig"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewTotalSearchesDivider"/>

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animUserSearches"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    app:lottie_fileName="59446-black-guy-animation.json"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"
                    android:layout_marginTop="@dimen/margin_littleBig"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtUserSearchesHeader"
                    app:lottie_cacheComposition="true" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtUserSearches"
                    android:textSize="@dimen/textSize_title"
                    android:text="000150"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_littleBig"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/animUserSearches"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
