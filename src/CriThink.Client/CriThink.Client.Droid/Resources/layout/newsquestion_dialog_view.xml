<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/bottomSheetLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:focusableInTouchMode="true"
    
    app:behavior_peekHeight="80dp"
    android:background="@drawable/round_white_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/bottomSheetHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/textSize_contentTitle"
            android:layout_margin="@dimen/margin_medium"
            tools:text="Questions"/>
		<ImageView
            android:id="@+id/img_arrow_up"
			android:layout_width="@dimen/imgSize_icon"
			android:layout_height="@dimen/imgSize_icon"
			android:src="@drawable/ic_arrow_up"
			android:layout_margin="@dimen/margin_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        
        <View
            android:id="@+id/viewSeparator"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/borderColor"/>
        <View
            android:id="@+id/viewSeparatorHighlighted"
            android:layout_width="0dp"
            android:layout_height="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tv_question"
            android:layout_marginStart="@dimen/margin_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/accent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
            
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainScrollView"    
        app:layout_constraintTop_toBottomOf="@id/bottomSheetHeader"
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <MvvmCross.DroidX.RecyclerView.MvxRecyclerView
                android:id="@+id/recyclerQuestions"
                android:layout_marginTop="@dimen/margin_littleBig"
                android:padding="@dimen/margin_medium"
                android:nestedScrollingEnabled="true"
                android:paddingStart="@dimen/padding_page"
                android:paddingEnd="@dimen/padding_page"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Next"
                android:textAllCaps="false"
                android:minWidth="@dimen/btn_min_width"
                android:textSize="@dimen/textSize_button"
                app:layout_constraintTop_toBottomOf="@id/recyclerQuestions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/margin_medium"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/orange_bg_button_radius"
                android:radius="@dimen/btn_radius"
                android:paddingStart="@dimen/padding_card"
                android:paddingEnd="@dimen/padding_mini"
                android:textColor="@android:color/white"/>
            <View
                app:layout_constraintTop_toBottomOf="@id/btnNext"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/viewFooter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/footer"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
