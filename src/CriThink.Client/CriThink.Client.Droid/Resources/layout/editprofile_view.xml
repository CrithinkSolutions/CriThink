<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusableInTouchMode="true"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitle"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/appBarLayout"
        app:layout_constraintTop_toTopOf="@id/appBarLayout"
        android:textStyle="bold"
        tools:text="Title"
        android:textSize="@dimen/textSize_header"
        android:gravity="center" />
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/appBarLayout"
        layout="@layout/toolbar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@drawable/round_background"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/margin_ProfileContent"
        android:id="@+id/scrollViewer"
        android:fillViewport="true"
        android:overScrollMode="always"> 

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_page"
            android:paddingRight="@dimen/padding_page"
            android:layout_marginBottom="@dimen/margin_medium"
            android:id="@+id/viewInnerLayout"
            android:paddingBottom="@dimen/padding_page"
            android:scrollbars="vertical">

                <FFImageLoading.Cross.MvxCachedImageView
                    android:id="@+id/bottomSheetGrapple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:src="@drawable/ic_bottom_sheet_grapple"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            
                <!-- Bio -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Bio"
                    android:id="@+id/txtBioTitle"
                    android:textSize="@dimen/textSize_subheader"
                    app:layout_constraintTop_toBottomOf="@id/bottomSheetGrapple"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/margin_veryBig"/>

                <!-- Given Name -->
                <TextView
                     android:id="@+id/tv_header_givenName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtBioTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/margin_medium"
                    tools:text="Name"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEditGivenName"
                    style="@style/OutlinedRoundedBox"
                    app:layout_constraintTop_toBottomOf="@id/tv_header_givenName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_mini">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtInputGivenName"
                        android:textColor="@color/editText_textColor"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>              

                <!-- Family Name -->
                <TextView
                    android:id="@+id/tv_header_familyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtEditGivenName"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/margin_medium"
                    tools:text="Surname"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEditFamilyName"
                    style="@style/OutlinedRoundedBox"
                    app:layout_constraintTop_toBottomOf="@id/tv_header_familyName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_mini">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtInputFamilyName"
                        android:textColor="@color/editText_textColor"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>          


                <!-- Bio -->
                <TextView
                    android:id="@+id/tv_header_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtEditFamilyName"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/margin_medium"
                    tools:text="Bio"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEditBio"
                    style="@style/OutlinedRoundedBox"
                    app:layout_constraintTop_toBottomOf="@id/tv_header_bio"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_mini">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtInputBio"
                        android:textColor="@color/editText_textColor"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- DoB -->
                <TextView
                    android:id="@+id/tv_header_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtEditBio"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/margin_medium"
                    tools:text="Date of Birth"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEditDoB"
                    style="@style/OutlinedRoundedBox"
                    app:layout_constraintTop_toBottomOf="@id/tv_header_dob"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_mini">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtInputDob"
                        android:clickable="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/editText_textColor"
                        android:inputType="@null"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Gender -->
                <TextView
                    android:id="@+id/tv_header_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtEditDoB"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/margin_medium"
                    tools:text="Gender"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEditGender"
                    style="@style/OutlinedRoundedBox"
                    app:layout_constraintTop_toBottomOf="@id/tv_header_gender"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_mini">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtInputGender"
                        android:clickable="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/editText_textColor"
                        android:inputType="@null"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Country -->
                <TextView
                    android:id="@+id/tv_header_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtEditGender"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/margin_medium"
                    tools:text="Country"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEditCountry"
                    style="@style/OutlinedRoundedBox"
                    app:layout_constraintTop_toBottomOf="@id/tv_header_country"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_mini">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtInputCountry"
                        android:textColor="@color/editText_textColor"/>
                </com.google.android.material.textfield.TextInputLayout>
               
                <!-- Social -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSocialTitle"
                    android:textSize="@dimen/textSize_subheader"
                    app:layout_constraintTop_toBottomOf="@id/txtEditCountry"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/margin_veryBig"/>

                <!-- Telegram -->
                <TextView
                    android:drawableStart="@drawable/ic_profile_telegram"
                    android:drawablePadding="@dimen/margin_mini"
                    android:id="@+id/tv_header_telegram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtSocialTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/margin_medium"
                    tools:text="Telegram"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEditTelegram"
                    style="@style/OutlinedRoundedBox"
                    app:layout_constraintTop_toBottomOf="@id/tv_header_telegram"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_mini">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtInputTelegram"
                        android:textColor="@color/editText_textColor"
                        android:inputType="textNoSuggestions"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Skype -->
                        
                <TextView
                    android:drawableStart="@drawable/ic_profile_skype"
                    android:drawablePadding="@dimen/margin_mini"
                    android:id="@+id/tv_header_skype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtEditTelegram"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/margin_medium"
                    tools:text="Skype"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEditSkype"
                    style="@style/OutlinedRoundedBox"
                    app:layout_constraintTop_toBottomOf="@id/tv_header_skype"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_mini">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtInputSkype"
                        android:textColor="@color/editText_textColor"
                        android:inputType="textNoSuggestions"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Twitter -->
                <TextView
                    android:drawableStart="@drawable/ic_profile_twitter"
                    android:drawablePadding="@dimen/margin_mini"
                    android:id="@+id/tv_header_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtEditSkype"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/margin_medium"
                    tools:text="Twitter"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEditTwitter"
                    style="@style/OutlinedRoundedBox"
                    app:layout_constraintTop_toBottomOf="@id/tv_header_twitter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_mini">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtInputTwitter"
                        android:textColor="@color/editText_textColor"
                        android:inputType="textNoSuggestions"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Instagram -->
                <TextView
                    android:drawableStart="@drawable/ic_profile_instagram"
                    android:drawablePadding="@dimen/margin_mini"
                    android:id="@+id/tv_header_instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtEditTwitter"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/margin_medium"
                    tools:text="Instagram"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEditInstagram"
                    style="@style/OutlinedRoundedBox"
                    app:layout_constraintTop_toBottomOf="@id/tv_header_instagram"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_mini">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtInputInstagram"
                        android:textColor="@color/editText_textColor"
                        android:inputType="textNoSuggestions"/>
                </com.google.android.material.textfield.TextInputLayout>


                <!-- Facebook -->
                        
                <TextView
                    android:drawableStart="@drawable/ic_profile_facebook"
                    android:drawablePadding="@dimen/margin_mini"
                    android:id="@+id/tv_header_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtEditInstagram"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/margin_medium"
                    tools:text="Facebook"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEditFacebook"
                    style="@style/OutlinedRoundedBox"
                    app:layout_constraintTop_toBottomOf="@id/tv_header_facebook"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_mini">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtInputFacebook"
                        android:textColor="@color/editText_textColor"
                        android:inputType="textNoSuggestions"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Snapchat -->               
                <TextView
                    android:drawableStart="@drawable/ic_profile_snapchat"
                    android:drawablePadding="@dimen/margin_mini"
                    android:id="@+id/tv_header_snapchat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtEditFacebook"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/margin_medium"
                    tools:text="Snapchat"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEditSnapchat"
                    style="@style/OutlinedRoundedBox"
                    app:layout_constraintTop_toBottomOf="@id/tv_header_snapchat"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_mini">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtInputSnapchat"
                        android:textColor="@color/editText_textColor"
                        android:inputType="textNoSuggestions"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- YouTube -->
                <TextView
                    android:drawableStart="@drawable/ic_profile_youtube"
                    android:drawablePadding="@dimen/margin_mini"
                    android:id="@+id/tv_header_youtube"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtEditSnapchat"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/margin_medium"
                    tools:text="YouTube"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEditYouTube"
                    style="@style/OutlinedRoundedBox"
                    app:layout_constraintTop_toBottomOf="@id/tv_header_youtube"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_mini">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtInputYouTube"
                        android:textColor="@color/editText_textColor"
                        android:inputType="textNoSuggestions"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Blog -->
                <TextView
                    android:drawableStart="@drawable/ic_profile_blog"
                    android:drawablePadding="@dimen/margin_mini"
                    android:id="@+id/tv_header_blog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txtEditYouTube"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/margin_medium"
                    tools:text="Blog"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEditBlog"
                    style="@style/OutlinedRoundedBox"
                    app:layout_constraintTop_toBottomOf="@id/tv_header_blog"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/margin_mini">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtInputBlog"
                        android:textColor="@color/editText_textColor"
                        android:inputType="textNoSuggestions"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Save -->
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnSave"
                    tools:text="Salva"
                    android:textAllCaps="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtEditBlog"
                    android:layout_marginTop="@dimen/margin_littleBig"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/orange_bg_button_radius"
                    android:radius="@dimen/btn_radius"
                    android:textColor="@android:color/white"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        
    </androidx.core.widget.NestedScrollView>
    <FFImageLoading.Cross.MvxSvgCachedImageView
        android:layout_width="@dimen/imgSize_extralarge"
        android:layout_height="@dimen/imgSize_extralarge"
        android:id="@+id/imgAvatar"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <FFImageLoading.Cross.MvxCachedImageView
        android:layout_width="@dimen/imgSize_publisherSmall"
        android:layout_height="@dimen/imgSize_publisherSmall"
        android:id="@+id/imgEditAvatar"
        android:src="@drawable/ic_edit"
        android:background="@drawable/ic_btnborder"
        android:tint="@color/welcomeBackground"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_huge"
        app:layout_constraintStart_toEndOf="@id/imgAvatar"
        app:layout_constraintEnd_toEndOf="@id/imgAvatar"
        app:layout_constraintBottom_toBottomOf="@id/imgAvatar"/>

</androidx.constraintlayout.widget.ConstraintLayout>
