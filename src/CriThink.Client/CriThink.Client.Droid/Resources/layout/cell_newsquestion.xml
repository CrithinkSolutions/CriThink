<?xml version="1.0" encoding="UTF-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/padding_card"
    android:paddingEnd="@dimen/padding_card">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_question"
        tools:text="What really makes you angry?"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textSize_subheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_mini"
        android:layout_marginBottom="@dimen/margin_mini"/>
    <RadioGroup
        android:id="@+id/radioGroupVote"
        android:layout_marginTop="@dimen/margin_mini"
        app:layout_constraintTop_toBottomOf="@id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radioVote1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/radio_height"
            android:layout_margin="@dimen/margin_mini"
            android:text="1"
            style="@style/RadioQuestion"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/radioVote2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/radio_height"
            android:layout_margin="@dimen/margin_mini"
            style="@style/RadioQuestion"
            android:text="2"/>
        <RadioButton
            android:id="@+id/radioVote3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/radio_height"
            android:layout_margin="@dimen/margin_mini"
            style="@style/RadioQuestion"
            android:text="3"/>
        <RadioButton
            android:id="@+id/radioVote4"
            style="@style/RadioQuestion"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/radio_height"
            android:layout_margin="@dimen/margin_mini"
            android:text="4"/>
        <RadioButton
            android:id="@+id/radioVote5"
            style="@style/RadioQuestion"
            android:layout_width="0dp"
            android:layout_weight="1" android:layout_height="@dimen/radio_height"
            android:layout_margin="@dimen/margin_mini"
            android:text="5"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>