<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitle"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/appBarLayout"
        app:layout_constraintTop_toTopOf="@id/appBarLayout"
        android:textStyle="bold"
        tools:text="Title"
        android:textSize="@dimen/textSize_header"
        android:gravity="center" />
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/appBarLayout"
        layout="@layout/toolbar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@drawable/round_background"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <mvvmcross.platforms.android.binding.views.MvxAppCompatSpinner
                android:id="@+id/btnFilterCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:minHeight="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:background="@drawable/outline_bg_button_radius"
                android:radius="@dimen/btn_radius"
                android:textColor="@color/borderUnselectedColor"
                app:MvxItemTemplate="@layout/spinner_template_dnews"
                app:MvxDropDownItemTemplate="@layout/spinner_dropdowntemplate_dnews"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFilterLanguage"
                android:layout_width="wrap_content"
                android:minWidth="100dp"
                android:minHeight="40dp"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_medium"
                app:layout_constraintStart_toEndOf="@id/btnFilterCountry"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/outline_bg_button_radius"
                android:radius="@dimen/btn_radius"
                android:textColor="@color/borderUnselectedColor"
                tools:text="Language"/>
            <mvvmcross.droidx.recyclerview.MvxRecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="@dimen/margin_mini"
                app:layout_constraintTop_toBottomOf="@id/btnFilterCountry"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/recyclerDebunkingNews" />
            <ScrollView
                android:id="@+id/scrollview_shimmer"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_mini"
                app:layout_constraintTop_toBottomOf="@id/btnFilterCountry"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content">
                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    layout="@layout/newschecker_shimmer_view"/>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
