<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:id="@+id/root">

  <androidx.core.widget.NestedScrollView
    android:layout_width="0dp"
    android:layout_height="match_parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:id="@+id/scrollViewer"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/padding_page"
      android:paddingRight="@dimen/padding_page"
      android:id="@+id/viewInnerLayout"
      android:scrollbars="vertical">

      <androidx.appcompat.widget.AppCompatImageView android:layout_width="0dp"
                                                    android:layout_height="@dimen/imgSize_bigLogo"
                                                    android:id="@+id/imgTopImg"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    app:layout_constraintLeft_toLeftOf="parent"
                                                    app:layout_constraintRight_toRightOf="parent"
                                                    android:layout_marginTop="@dimen/margin_medium"
                                                    android:src="@drawable/ic_text_logo" />

      <!-- Facebook -->
      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnFb"
        android:text="@string/facebook_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnGoogle"
        android:layout_marginBottom="@dimen/margin_littleBig"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/btn_fb"
        android:elevation="@dimen/btn_elevation"
        android:fontFamily="@font/urbanist"
        android:layout_marginTop="@dimen/margin_huge" />

      <!-- Google -->
      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnGoogle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/btn_google"
        android:fontFamily="@font/urbanist"
        android:elevation="@dimen/btn_elevation"
        android:layout_marginBottom="@dimen/margin_veryBig"
        android:text="@string/google_login" />

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutLoader"
        android:padding="@dimen/padding_page">
        
        <!-- TEMP -->
        <androidx.appcompat.widget.AppCompatButton
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintBottom_toTopOf="@id/txtInput_email"
          android:id="@+id/btnJump"/>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/txtInput_email"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintBottom_toTopOf="@id/txtInput_password"
          android:layout_marginBottom="@dimen/margin_mini"
          android:hint="@string/login_email"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
          <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtEdit_emailOrUsername"
            android:fontFamily="@font/urbanist"
            android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>
                
        <!-- Password -->
        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/txtInput_password"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintBottom_toTopOf="@id/guidelineHorizontal"
          app:passwordToggleEnabled="true"
          android:layout_marginBottom="@dimen/margin_mini"
          android:hint="@string/login_password"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
          <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtEdit_password"
            android:fontFamily="@font/urbanist"
            android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
                
        <androidx.constraintlayout.widget.Guideline
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/guidelineHorizontal"
          android:orientation="horizontal"
          app:layout_constraintGuide_percent="0.5"/>

        <!-- Forgot password -->
        <androidx.appcompat.widget.AppCompatButton
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/guidelineHorizontal"
          android:id="@+id/btnForgotPassword"
          android:text="@string/login_forgotPassword"
          android:background="@null"
          android:minWidth="0dp"
          android:minHeight="0dp"
          android:gravity="right"
          android:textSize="@dimen/textSize_small"
          android:fontFamily="@font/urbanist"/>
        
        <!-- Btn login -->
        <androidx.appcompat.widget.AppCompatButton
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/btnLogin"
          android:text="@string/login_login"
          android:elevation="@dimen/btn_elevation"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/btnForgotPassword"
          android:layout_marginTop="@dimen/margin_small"
          android:fontFamily="@font/urbanist"/>

      </androidx.constraintlayout.widget.ConstraintLayout>
    
      <CriThink.LoaderView
        android:layout_width="@dimen/imgSize_loader"
        android:layout_height="@dimen/imgSize_loader"
        android:id="@+id/layoutLoader"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgTopImg"/>
    
    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
